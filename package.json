{
  "name": "hairdresser",
  "version": "0.1.0",
  "description": "A universal javascript library for <head> element manipulation",
  "main": "lib/Hairdresser.js",
  "jsnext:main": "src/Hairdresser.js",
  "author": "Giff Song <giff.song@gmail.com> (http://github.com/pawsong)",
  "repository": {
    "type": "git",
    "url": "https://github.com/pawsong/hairdresser.git"
  },
  "license": "MIT",
  "keywords": [
    "head",
    "document",
    "meta",
    "link",
    "title",
    "angular",
    "react"
  ],
  "scripts": {
    "clean": "rimraf lib build .coverage",
    "lint": "eslint ./",
    "test": "npm run lint && npm run test:all",
    "test:all": "karma start --single-run && npm run test:node",
    "test:cov": "COVERAGE=true karma start --single-run",
    "test:watch": "karma start",
    "test:node": "mocha test/*.test.js",
    "test:watch:node": "mocha test/*.test.js --watch",
    "build:lib": "NODE_ENV=production babel src --optional utility.inlineEnvironmentVariables --out-dir lib",
    "build:umd": "webpack --config webpack/development.config.js",
    "build:umd:min": "webpack --config webpack/production.config.js",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "docs:build": "jsdoc src -d .jsdoc -c ./jsdoc.json",
    "docs:publish": "npm run docs:bulid && gh-pages -d .jsdoc",
    "preversion": "npm run clean && npm test",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm run clean && npm run docs:publish",
    "prepublish": "npm run clean && npm run build"
  },
  "dependencies": {
    "invariant": "^2.1.1"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-core": "^5.8.23",
    "babel-eslint": "^4.0.10",
    "babel-loader": "^5.3.2",
    "chai": "^3.2.0",
    "eslint": "~1.3.0",
    "eslint-config-airbnb": "^0.0.8",
    "eslint-plugin-react": "^3.3.2",
    "fbemitter": "^2.0.0",
    "isparta-loader": "^0.2.0",
    "jsdoc": "git+https://github.com/jsdoc3/jsdoc.git",
    "karma": "^0.13.9",
    "karma-chrome-launcher": "^0.2.0",
    "karma-coverage": "^0.5.0",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-sinon": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.5",
    "karma-webpack": "^1.7.0",
    "lodash": "^3.10.1",
    "mocha": "^2.2.5",
    "phantomjs": "^1.9.18",
    "phantomjs-polyfill": "0.0.1",
    "rimraf": "^2.4.2",
    "sinon": "^1.16.1",
    "webpack": "^1.12.0"
  }
}
